<% orders.each do |order| %>
  <div class="each-order">
    <p>
      <span>Order Id:<%= order.id %></span>
      <span class="total-price">Rs.<%= order.total_price %></span>
    </p>
    <p class="ordered_at">
      <% if order.date %>
        <%= order.date.strftime("%d %B,%Y - %I:%M %p") %>
      <% end %>
    </p>
    <p>
      <% if mark_as_delivered %>
        <%= link_to "Mark as Delivered", order_path(order.id), method: "patch" %>
      <% else %>
        <%= link_to "View Details", order_path(order.id) %>
      <% end %>
      <span class="each-order-status">
        <%= order.order_status %>
      </span>
    </p>
    <section class="order-details" id="order-details">
      <ul>
        <% order.order_items.each do |menu_item| %>
          <li class="order-item" >
            <span><%= menu_item.menu_item_name %></span >
            <span class="total-price">Rs.<%= menu_item.menu_item_price %></span>
          </li>
        <% end %>
      </ul>
    </section>
  </div>
<% end %>
