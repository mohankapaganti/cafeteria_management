<div class="cart">
  <h3 class="cart-heading">Cart</h3>
  <% if @order %>
    <div class="cart-item-price">
      <p class="cart-item-heading" >
        <span>Item Name</span >
        <span class="total-price">Price</span>
      </p>
      <ul>
        <% @order.all_menu_item_names.uniq.each do |menu_item| %>
          <li class="cart-item" >
            <span><%= menu_item + " x"+@order.all_menu_item_names.count(menu_item).to_s %></span >
            <span class="total-price">Rs.<%= @order.order_items.get_menu_item_price(menu_item)*@order.all_menu_item_names.count(menu_item) %></span>
          </li>
        <% end %>
      </ul>
      <p class="cart-total-price" >
        <span>Total Price</span >
        <span class="total-price"><%= @order.total_price %></span>
      </p>
      <%= form_with(model: @order, url: orders_path, method: "post", local: true) do |form| %>
        <%=form.submit "Checkout",data: { "disable-with": "Processing..." },class:"cart-checkout"%>
      <% end %>
    <% else %>
      <h2 class="empty-cart">Uh oh! Your cart is empty</h2>
    <% end %>
  </div>
</div>
