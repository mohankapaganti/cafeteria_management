<main class="all-users">
  <% content_for :search do %>
    <div class="search-box">
      <%= form_with(url: search_path, method: "get", local: true) do |form|%>
        <%= form.text_field :email, placeholder: "Enter email of user" %>
        <%= form.submit "Search User", placeholder: "Enter email of user" %>
      <% end %>
    </div>
  <% end %>
  <%= render partial: "user-details", locals: {roles: nil, owner: @current_user, heading: "Owner"} %>
  <%= render partial: "user-details", locals: {roles: @clerks, owner: nil, heading: "Clerks"} %>
  <%= render partial: "user-details", locals: {roles: @customers, owner: nil, heading: "Customers"} %>
</main>
