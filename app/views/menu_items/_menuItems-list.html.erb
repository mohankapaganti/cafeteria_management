<div class="cafeteria-menuItems">
  <% @menus.each do |menu|%>
    <ul class="menuItems-list">
      <h3 class="menuName" id=<%=menu.name%>><%=menu.name%></h3>
      <%menu.menu_items.each do |menu_item|%>
        <li class="menuItem">
          <p>
            <%=menu_item.name%>
            <span class="menuItem-price">â‚¹<%=menu_item.price%><span><a href=""><img src="edit.png"></a></span></span>
          </p>
          <p class="orderItem-add">
            <% if @order%>
                <%if @order.order_items.get_order_item(menu_item.id).exists?%>
                  <%=link_to "-", "order_items/#{@order.get_order_item_id(menu_item.id)}", {:method => :delete} %>
                  <%=@order.order_items.get_order_item(menu_item.id).count%>
                  <%=link_to "+", order_items_path(menu_item_id: menu_item.id,user_id:1 ), {:method => :post} %>
                <% else %>
                  <%=link_to "Add +", order_items_path(menu_item_id: menu_item.id,user_id:1 ), {:method => :post} %>
                <%end%>
            <% else %>
              <%=link_to "Add +", order_items_path(menu_item_id: menu_item.id,user_id:1 ), {:method => :post} %>
            <% end %>
          </p>
        </li>
      <%end%>
    </ul>
  <%end%>
</div>
