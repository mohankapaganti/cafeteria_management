<div class="cafeteria-menuItems">
  <% @menus.each do |menu|%>
    <ul class="menuItems-list">
      <h3 class="menuName" id=<%=menu.name%>><%=menu.name%></h3>
      <%menu.menu_items.each do |menu_item|%>
        <li class="menuItem">
          <p>
            <%=menu_item.name%>
            <span class="menuItem-price">â‚¹<%=menu_item.price%><span><a href=""><img src="edit.png"></a></span></span>
          </p>
          <p class="orderItem-add">
            <% if @order.order_items.where("menu_item_id = ?",menu_item.id).exists?%>
              <a href="">-</a> <%=@order.order_items.where("menu_item_id = ?",menu_item.id).count%> <a href="">+</a>
            <% else %>
              <%=link_to "Add +", order_items_path(menu_item_id: menu_item.id ), {:method => :post} %>
            <% end %>
          </p>
        </li>
      <%end%>
    </ul>
  <%end%>
</div>
